<div id="home">
  <div class="col-md-3 col-sm-3 col-sm-offset-4" >
    <div class="div-trans form-box">
      <h3>Forgot your password?</h3>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal' }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :email, class: 'col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= f.email_field :email, autofocus: true, :style=>"color:#EEE" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-2"></div>
          <div class="col-sm-10">
            <%= f.submit "Send me reset password instructions", class: "btn btn-info btn-sm" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
