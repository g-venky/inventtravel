<div class="row fixed deal-submenu">
  <ul class="nav nav-pills">
    <li class="dropdown mr20">
      <%if @active_tab == 'all_queries' || @active_tab == 'add_query' || @active_tab == 'my_queries'%>
        <%= link_to 'Deals', deals_path, class: "btn btn-secondary" %>
      <%else%>
        <a class="btn <%= @active_tab == 'all_deals' || @active_tab == 'add_deal' || @active_tab == 'my_deals' ? 'btn-primary' : 'btn-secondary' %> dropdown-toggle" type="button" data-toggle="dropdown" href="/deals">
          Deals
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to 'All Deals', all_deals_path, remote: true, class: "btn btn-sm #{@active_tab == 'all_deals' ? 'btn-primary' : ''} sub-tab" %>
          </li>
          <li><%= link_to 'Add My deal', new_deal_path, remote: true, class: "btn btn-sm #{@active_tab == 'add_deal' ? 'btn-primary' : ''} sub-tab", id: "deal_btn" %>
          </li>
          <li>
            <%= link_to 'My deal', my_deals_path, remote: true, class: "btn btn-sm #{@active_tab == 'my_deals' ? 'btn-primary' : ''} sub-tab" %>
          </li>
        </ul>
      <%end%>
    </li>

    <li class="dropdown">
      <%if @active_tab == 'all_deals' || @active_tab == 'add_deal' || @active_tab == 'my_deals'%>
        <%= link_to 'Queries', queries_path, class: "btn btn-secondary" %>
      <%else%>
        <a class="btn <%= @active_tab == 'all_queries' || @active_tab == 'add_query' || @active_tab == 'my_queries' ? 'btn-primary' : 'btn-secondary' %> dropdown-toggle" type="button" data-toggle="dropdown" href="/queries">
          Queries
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to 'All Queries', all_queries_path, remote: true, class: "btn btn-sm #{@active_tab == 'all_queries' ? 'btn-primary' : ''} sub-tab" %>
          </li>
          <li>
            <%= link_to 'Add My Query', new_query_path, remote: true, class: "btn btn-sm #{@active_tab == 'add_query' ? 'btn-primary' : ''} sub-tab", id: "deal_btn" %>
          </li>
          <li>
            <%= link_to 'My Queries', my_queries_path, remote: true, class: "btn btn-sm #{@active_tab == 'my_queries' ? 'btn-primary' : ''} sub-tab" %>
          </li>
        </ul>
      <%end%>
    </li>
  </ul>
</div>

<script type="text/javascript">
  $(function(){
    $(".dropdown").hover(            
            function() {
                $('.dropdown-menu', this).stop( true, true ).fadeIn("fast");
                $(this).toggleClass('open');
                $('b', this).toggleClass("caret caret-up");                
            },
            function() {
                $('.dropdown-menu', this).stop( true, true ).fadeOut("fast");
                $(this).toggleClass('open');
                $('b', this).toggleClass("caret caret-up");                
            });
    });
</script>